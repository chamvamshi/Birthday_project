<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="HAPPY BIRTHDAY BHAVANAðŸ˜...!!!"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="#364CC6"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">



        <Button
            android:id="@+id/btnclock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#DF3030"
            android:text="BirthClock" />

        <Button
            android:id="@+id/btnmemory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#DF3030"
            android:text="memory" />
        <Button
            android:id="@+id/mssgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#DF3030"
            android:text="MESSAGE" />
    </LinearLayout>
    
   <View
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:id="@+id/view"
       android:background="#9F9C9C"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/framelayout"/>
</LinearLayout>